	class MyButtonListener implements ActionListener
	{
		public void actionPerformed(ActionEvent e)
		{
			String text = null;
			Object source = e.getSource();
			if(source==btScore)
			{
				text = "Score is : " + score + " .";
			}
			else if(source==btScrInc)
			{
				score++;
				text = "Added 1 to score";
			}
			else if(source==btScrDec)
			{

				score--;
				text = "Removed 1 from score";
			}
			tfScore.setText(text);
		}
	}
	class MyFrameListener implements ActionListener {
